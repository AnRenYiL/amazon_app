<h3>All Products</h3>

<% @products.each do |product| %>
<div class="card bg-light mb-3" >
  <div class="card-header"><%= link_to product.title, product_path(product) %></div>
  <div class="card-body">
    <h5 class="card-title">$<%= product.price %></h5>
    <p class="card-text"><%= product.description %></p>
  </div>
</div>
<% end %>